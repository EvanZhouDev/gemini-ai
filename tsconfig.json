{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.test.ts",
    "**/*.bench.ts",
    "**/*.test.tsx",
    "**/*.bench.tsx"
  ]
}
